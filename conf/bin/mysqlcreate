#!/bin/bash

NAME=$1

mysql -u root -proot << EOF
CREATE USER '${NAME}'@'localhost' IDENTIFIED BY '${NAME}';
GRANT USAGE ON *.* TO '${NAME}'@'localhost' IDENTIFIED BY '${NAME}' REQUIRE NONE WITH MAX_QUERIES_PER_HOUR 0 MAX_CONNECTIONS_PER_HOUR 0 MAX_UPDATES_PER_HOUR 0 MAX_USER_CONNECTIONS 0;
CREATE DATABASE IF NOT EXISTS ${NAME};
GRANT ALL PRIVILEGES ON ${NAME}.* TO '${NAME}'@'localhost';
EOF
